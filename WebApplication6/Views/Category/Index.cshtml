@model WebApplication6.ViewModels.Category.CategoryIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Category</h2>
<hr />
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Skapa ny", "Create", "Category")
    </p>
}
<br />

<table class="table">
    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>@Html.ActionLink(item.CategoryName, "Index", "Skor", new { id = item.CategoryId }, null)</td>
            @if (Request.IsAuthenticated)
            {
                <td style="text-align: right">
                    @Html.ActionLink(" ", "Ändra", new { id = item.CategoryId }, new { @class = "glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink(" ", "Radera", new { id = item.CategoryId }, new { onclick = "return confirm('Are sure you want to delete this category?');", @class = "glyphicon glyphicon-trash" })
                </td>
            }
        </tr>
    }
</table>